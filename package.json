{
  "name": "ms-boilerplate",
  "version": "1.0.0",
  "description": "Simple boilerplate for static website",
  "scripts": {
    "compile:scss": "node-sass --output-style compressed -o dist/styles src/scss",
    "prefix:scss": "postcss --use autoprefixer -b \"last 10 versions\" dist/styles/index.css -o dist/styles/index.css",
    "build:scss": "parallelshell  \"npm run compile:scss\" \"npm run prefix:scss\"",
    "watch:scss": "onchange -i -v \"./src/styles/*.scss\" -- npm run build:scss",
    "lint:js": "eslint --fix ./src/js/*.js",
    "bundle:js": "bundle-js src/js --dest dist/js/bundle.js --disable-beautify",
    "minify:js": "uglifyjs ./dist/js/bundle.js --output ./dist/js/bundle.js",
    "update:js": "parallelshell \"npm run lint:js\" \"npm run minify:js\" \"npm run bundle:js\"",
    "watch:js": "onchange -i -v \"./src/js/**/*\" -- npm run update:js",
    "start": "browser-sync -s -f \"./index.html, dist/**/*, src/**/*\"",
    "watch:all": "parallelshell \"npm start\" \"npm run watch:scss\" \"npm run watch:js\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "browser-sync": "^2.26.7",
    "browserify": "^16.5.1",
    "build-bundle": "^2.0.8",
    "bundle-js": "^1.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "node-sass": "^4.13.1",
    "onchange": "^6.1.0",
    "parallelshell": "^3.0.1",
    "postcss": "^8.2.10",
    "postcss-cli": "^7.1.0",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "jquery": "^3.5.0"
  }
}